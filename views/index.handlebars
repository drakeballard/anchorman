<div class="container">
    {{!--Page Header--}}
    <div class="row">
        <div class="col-lg-12">
            {{#unless logged_in}}
                <h1>You are not logged in</h1>
            {{/unless}}
            <h1 class="page-header"> Enjoy Reading !! {{username}}
                </h1>{{!-- <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">Full Width Page</li>
                </ol> --}}
        </div>
    </div>
    <div class="row">
      {{!--left column --}}
        <div class="col-sm-6 col-md-8">
            {{!--article block; --}}
            {{#each articles}}
                <div class="row blog-item-row">
                    <div class="col-md-6">
                        <a href="{{this.articleUrl}}">
                            <img class="img-responsive img-hover" src="{{this.articleImageUrl}}" alt="">
                        </a>
                    </div>
                    <div class="col-md-6">
                        <h3><a href="{{this.articleUrl}}">{{this.title}}</a>
                        </h3>
                        <hr>
                        <ul class="list-inline">
                            {{!--  <li><img src="{{../sourceDetails.urlsToLogos.small}}
                            " class=" source-img "></li> --}}
                                        <li><i class="fa fa-user "></i>{{this.author}}</li>
                                        <li><i class="fa fa-calendar "></i>{{this.publishedAt}}</li>
                                        {{!-- <li><i class="fa fa-clock-o"></i>10:00</li> --}}

                                    </ul>
                                    <hr>

                        <p>{{this.description}}</p>
                        <hr>
                        <div class="inline-form ">
                            <a class="btn btn-primary " href="{{this.articleUrl}}">Read More <i class="fa fa-angle-right"></i></a>
                                <form class="inline-form" style="display:inline;" action="/articles/delete/{{this.id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">DELETE!</button>
                                </form>
                    </div>
                </div>
        </div>
        {{/each}}

    </div>
    {{!-- right side column --}}
    <div class="col-sm-6 col-md-4">
        <div class="row">
            <div class="col-md-12">
                <div class="well text-center">
                    {{#if logged_in}}
                        <h3>Welcome : {{email}}</h3>
                        <hr>
                         <a href="/articles/" class="btn btn-primary ">To My Dashboard</a>
                        <a href="/users/sign-out" class="btn btn-warning"> Sign Out </a>
                    {{/if}}
                    {{#unless logged_in}}
                        {{> loginForm}}
                    {{/unless}}
                </div>
            </div>
            <div class="col-md-12">

                {{> categoryGrid}}

            </div>
        </div>
    </div>
</div>
</div>
