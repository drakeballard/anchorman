<!-- this is the sign_in.handlebars file inside the users folder of the views folder
views/users/sign_in.handlebars -->

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sign In To View Read List<hr>
                    <small> <a href="/users/new"> Sign Up </a> if you dont have accont with us </small>
                </h1>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a>
                </li>
                <li class="active">Full Width Page</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-8">
            <div class="row">
                <h2>Sign In</h2>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <form class="create-update-form" action="/users/login" method="POST">
                            <div class="form-group">
                                <label for="em">Email:</label>
                                <input type="text" class="form-control" id="em" name="email">
                            </div>
                            <div class="form-group">
                                <label for="pass">Password:</label>
                                <input type="password" class="form-control" id="pass" name="password">
                            </div>
                            <button type="submit">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="row">
                <div class="col-md-12">
                    {{> categoryGrid}} {{> countryGrid}} {{> languageGrid}}
                </div>
            </div>
        </div>
    </div>
</div>
